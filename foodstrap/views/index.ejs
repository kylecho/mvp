<!DOCTYPE html>
<html>
  <head>
    <title>Foodstrap</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/angular.js"></script>
    <script src="/javascripts/angular-ui-router.min.js"></script>
    <script src="/javascripts/angularApp.js"></script>
  </head>
  <body ng-app="foodstrap">

	  <div class="page-header">
	    <div id="title"><h2>Foodstrap</h2></div>
	  </div>

	  <div ng-view></div>
		<!-- Main Page -->
		<script type="text/ng-template" id="/home.html">
	    <div class="selection">
	      <form name="lunch" id="lunch">
	        <h2>Lunch</h2>
	        <label>
	          <input type="radio" name="lunch">
	          The Westfield Mall
	        </label><br/>
	        <label>
	          <input type="radio" name="lunch">
	          Little Delhi
	        </label><br/>
	        <label>
	          <input type="radio" name="lunch">
	          Farmerbrown
	        </label><br/>
	        <label>
	          <input type="radio" name="lunch">
	          Tu Lan
	        </label><br/>
	        <label>
	          <input type="radio" name="lunch">
	          Taqueria Cancún
	        </label><br/>
	        <label>
	          <input type="radio" name="lunch">
	          The Hall
	        </label><br/>
	        <label>
	          <input type="radio" name="lunch">
	          I brought food.
	        </label><br/>
	      </form>

	      <form name="dinner" id="dinner">
	        <h2>Dinner</h2>
	        <label>
	          <input type="radio" name="dinner">
	          The Westfield Mall
	        </label><br/>
	        <label>
	          <input type="radio" name="dinner">
	          Little Delhi
	        </label><br/>
	        <label>
	          <input type="radio" name="dinner">
	          Farmerbrown
	        </label><br/>
	        <label>
	          <input type="radio" name="dinner">
	          Tu Lan
	        </label><br/>
	        <label>
	          <input type="radio" name="dinner">
	          Taqueria Cancún
	        </label><br/>
	        <label>
	          <input type="radio" name="dinner">
	          The Hall
	        </label><br/>
	        <label>
	          <input type="radio" name="dinner">
	          I brought food.
	        </label><br/>
	      </form>

	      <form name="night" id="night">
	        <h2>Night</h2>
	        <label>
	          <input type="radio" name="night">
	          Tempest
	        </label><br/>
	      </form>
	      <div id="button-container">
	        <button id="ready-button"><p>"I'm ready to eat! :)"</p></button>
	      </div>
	    </div>
	  </script>

		<!-- SignUp Form -->
		<script type="text/ng-template" id="/signup.html">
		  <div ng-show="error" class="alert alert-danger row">
		    <span>{{ error.message }}</span>
		  </div>

		  <form ng-submit="signUp()"
		    style="margin-top:30px;">
		    <h3>Register</h3>

		    <div class="form-group">
		      <input type="text"
		      class="form-control"
		      placeholder="Username"
		      ng-model="user.username"></input>
		    </div>
		    <div class="form-group">
		      <input type="password"
		      class="form-control"
		      placeholder="Password"
		      ng-model="user.password"></input>
		    </div>
		    <button type="submit" class="ready-button">Register</button>
		  </form>
		</script>

		<!-- SignIn Form -->
		<script type="text/ng-template" id="/signin.html">
		  <div ng-show="error" class="alert alert-danger row">
		    <span>{{ error.message }}</span>
		  </div>

		  <form ng-submit="signIn()"
		    style="margin-top:30px;">
		    <h3>Log In</h3>

		    <div class="form-group">
		      <input type="text"
		      class="form-control"
		      placeholder="Username"
		      ng-model="user.username"></input>
		    </div>
		    <div class="form-group">
		      <input type="password"
		      class="form-control"
		      placeholder="Password"
		      ng-model="user.password"></input>
		    </div>
		    <button type="submit" class="btn btn-primary">Log In</button>
		  </form>
		</script>

  </body>
</html>
